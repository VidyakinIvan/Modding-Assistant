<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="PrimaryBackgroundColor">#27253F</Color>
    <Color x:Key="SecondaryBackgroundColor">#3C3A55</Color>
    <Color x:Key="HoverBackgroundColor">#484A6E</Color>
    <Color x:Key="PrimaryForegroundColor">#DFFFFF</Color>
    <Color x:Key="DialogPrimaryBackgroundColor">#23272E</Color>
    <Color x:Key="DialogForegroundColor">#F3F3F3</Color>
    <Color x:Key="DialogSeconadryBackgroundColor">#2C313A</Color>
    <Color x:Key="DialogAccentColor">#3A3F4B</Color>
    <Color x:Key="DialogButtonBorderColor">#23272E</Color>

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForegroundColor}"/>
    <SolidColorBrush x:Key="DialogPrimaryBackgroundBrush" Color="{StaticResource DialogPrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="DialogForegroundBrush" Color="{StaticResource DialogForegroundColor}"/>
    <SolidColorBrush x:Key="DialogSecondaryBackgroundBrush" Color="{StaticResource DialogSeconadryBackgroundColor}"/>
    <SolidColorBrush x:Key="DialogAccentBrush" Color="{StaticResource DialogAccentColor}"/>
    <SolidColorBrush x:Key="DialogButtonBorderBrush" Color="{StaticResource DialogButtonBorderColor}"/>

    <SolidColorBrush x:Key="MinimizeButtonHoverBrush" Color="RoyalBlue"/>
    <SolidColorBrush x:Key="MaximizeButtonHoverBrush" Color="Violet"/>
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="Red"/>
    
</ResourceDictionary>