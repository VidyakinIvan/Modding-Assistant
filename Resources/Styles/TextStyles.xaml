<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <system:Double x:Key="TitleFontSize">22</system:Double>
    <system:Double x:Key="LargeFontSize">22</system:Double>
    <system:Double x:Key="NormalFontSize">14</system:Double>
    <system:Double x:Key="DataGridFontSize">14</system:Double>

    <FontWeight x:Key="AccentFontWeight">Bold</FontWeight>
    <FontWeight x:Key="NormalFontWeight">Normal</FontWeight>

    <TextTrimming x:Key="Trimming">CharacterEllipsis</TextTrimming>

</ResourceDictionary>