<Window x:Class="Modding_Assistant.MVVM.View.Dialogs.MoveModsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markup="clr-namespace:Modding_Assistant.MVVM.View.Markup"
        mc:Ignorable="d"
        Height="{StaticResource DialogHeight}" Width="{StaticResource DialogWidth}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource DialogPrimaryBackgroundBrush}"
        Foreground="{StaticResource DialogForegroundBrush}"
        FontSize="{StaticResource NormalFontSize}"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Converters/MoveModsDialogConverters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="{StaticResource DialogMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource CloseButtonSquaredStyle}" HorizontalAlignment="Right" Command="{Binding CloseCommand}"/>
        <TextBlock Text="{markup:Localize MoveDialogInputPrompt}" Grid.Row="1"/>
        <TextBox x:Name="ModNumberTextBox" Grid.Row="2" Height="28" VerticalContentAlignment="Center"
                 Background="{StaticResource DialogSecondaryBackgroundBrush}" 
                 Foreground="{StaticResource DialogForegroundBrush}"
                 BorderBrush="{StaticResource DialogAccentBrush}" BorderThickness="1" Padding="6,0"
                 Text="{Binding ModNumber, Converter={StaticResource NullableIntConverter}, UpdateSourceTrigger=PropertyChanged}"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="{markup:Localize MoveDialogOkButton}" Style="{StaticResource DialogButtonStyle}"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Command="{Binding OKCommand}"/>
            <Button Content="{markup:Localize MoveDialogCancelButton}" Style="{StaticResource DialogButtonStyle}"
                    IsCancel="True"
                    Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</Window>
