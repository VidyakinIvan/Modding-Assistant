<Window x:Class="Modding_Assistant.MVVM.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modding_Assistant"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:val="clr-namespace:Modding_Assistant.MVVM.Validation"
        xmlns:markup="clr-namespace:Modding_Assistant.MVVM.View.Markup"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Height="{StaticResource WindowHeight}" Width="{StaticResource WindowWidth}"
        MinWidth="{StaticResource MinWindowWidth}" MinHeight="{StaticResource MinWindowHeight}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Converters/MainWindowConverters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Border Background="{StaticResource PrimaryBackgroundBrush}" CornerRadius="{StaticResource WindowCornerRadius}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding MoveWindowCommand}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="0.25*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="1" Height="{StaticResource ToolbarHeight}" Orientation="Horizontal">
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding SettingsCommand}">
                    <Path Data="{StaticResource SettingsIconGeometry}" Fill="{StaticResource ForegroundBrush}" 
                          Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding ExportCommandAsync}">
                    <Path Data="{StaticResource ExportIconGeometry}" Fill="{StaticResource ForegroundBrush}" 
                          Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding LanguageCommand}">
                    <TextBlock Text="{Binding CurrentLanguage}" FontSize="{StaticResource LargeFontSize}" 
                               FontWeight="{StaticResource AccentFontWeight}" VerticalAlignment="Center" 
                               HorizontalAlignment="Center" Foreground="{StaticResource ForegroundBrush}"/>
                </Button>
            </StackPanel>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Mod Assistant" Foreground="{StaticResource ForegroundBrush}" 
                       IsHitTestVisible="False" FontWeight="{StaticResource NormalFontWeight}" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" FontSize="{StaticResource TitleFontSize}"/>
            <StackPanel Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Orientation="Horizontal" 
                        Margin="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}, 
                            Converter={StaticResource WindowStateToMarginConverter}}">
                <Button Style="{StaticResource MinimizeButtonStyle}" Command="{Binding MinimizeCommand}"/>
                <Button Style="{StaticResource MaximizeButtonStyle}" Command="{Binding MaximizeCommand}"/>
                <Button Style="{StaticResource CloseButtonRoundedStyle}" Command="{Binding ExitCommand}"/>
            </StackPanel>
            <ProgressBar Grid.Column="3" Grid.Row="1" Value="{Binding ImportProgress, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                         Height="20"/>
            <DataGrid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" ItemsSource="{Binding ModList}" 
                      Style="{StaticResource DataGridStyle}"
                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"  
                      CellStyle="{StaticResource DataGridCellStyle}"
                      ContextMenu="{StaticResource DataGridContextMenu}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderOrder}" IsReadOnly="True" 
                                        Binding="{Binding Order}"  Width="*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}"/>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderName}" Width="4*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Name" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True" 
                                     NotifyOnValidationError="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderVersion}" Width="2*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Version" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True" 
                                     NotifyOnValidationError="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderInstallInstructions}" Width="6*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="InstallInstructions" UpdateSourceTrigger="PropertyChanged" 
                                     ValidatesOnDataErrors="True" 
                                     NotifyOnValidationError="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderURL}" Binding="{Binding Url}" Width="6*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}"/>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderDependencies}" Binding="{Binding Dependencies}" 
                                        Width="2*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}"/>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderModRawName}" Binding="{Binding ModRawName}" 
                                        Width="4*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}"/>
                    <DataGridTemplateColumn Header="{markup:Localize DataGridHeaderLastUpdated}" Width="2*" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LastUpdated, StringFormat='dd.MM.yyyy'}" 
                                           Style="{StaticResource CenterTextColumnStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <DatePicker Style="{StaticResource DataGridDatePickerStyle}">
                                    <DatePicker.SelectedDate>
                                        <Binding Path="LastUpdated" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" 
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True" 
                                                 Converter="{StaticResource DateOnlyToDateTimeConverter}">
                                            <Binding.ValidationRules>
                                                <val:NotEmptyValidationRule/>
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </DatePicker.SelectedDate>
                                </DatePicker>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderDescription}" Width="6*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Description" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True" 
                                     NotifyOnValidationError="True">
                                <Binding.ValidationRules>
                                    <val:NotEmptyValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{markup:Localize DataGridHeaderPotentialIssues}" 
                                        Binding="{Binding PotentialIssues}" Width="6*" 
                                        ElementStyle="{StaticResource CenterTextColumnStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
    
</Window>
