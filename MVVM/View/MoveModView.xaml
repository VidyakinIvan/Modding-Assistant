<Window x:Class="Modding_Assistant.MVVM.View.MoveModView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Modding_Assistant.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Move after..." Height="175" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#23272E"
        Foreground="#F3F3F3"
        FontSize="14">
    <Window.DataContext>
        <viewModel:MoveModViewModel/>
    </Window.DataContext>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter the mod number after which to move the selected items:"/>
        <TextBox x:Name="ModNumberTextBox"
                 Grid.Row="1"
                 Height="28"
                 VerticalContentAlignment="Center"
                 Background="#2C313A"
                 Foreground="#F3F3F3"
                 BorderBrush="#3A3F4B"
                 BorderThickness="1"
                 Padding="6,0"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="OK"
                    Width="80"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Background="#3A3F4B"
                    Foreground="#F3F3F3"
                    BorderBrush="#23272E"
                    Padding="6,2"/>
            <Button Content="Cancel"
                    Width="80"
                    IsCancel="True"
                    Background="#3A3F4B"
                    Foreground="#F3F3F3"
                    BorderBrush="#23272E"
                    Padding="6,2"/>
        </StackPanel>
    </Grid>
</Window>
